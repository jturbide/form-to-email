<?xml version="1.0"?>
<ruleset name="FormToEmail Standards">
    <description>PSR-12 + Slevomat with PHP 8.4 refinements</description>

    <file>src</file>
    <file>tests</file>
    <exclude-pattern>vendor/</exclude-pattern>
    <exclude-pattern>dist/</exclude-pattern>
    <exclude-pattern>tests/Http/PhpInputMock.php</exclude-pattern>

    <!-- Base PSR-12 (ignore trailing whitespace and file-header order) -->
    <rule ref="PSR12">
        <exclude name="Squiz.WhiteSpace.SuperfluousWhitespace.EndLine"/>
        <exclude name="PSR12.Files.FileHeader"/>
    </rule>

    <!-- Indentation and line length -->
    <rule ref="Generic.WhiteSpace.DisallowTabIndent"/>
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="140"/>
            <property name="absoluteLineLimit" value="0"/>
            <property name="ignoreComments" value="true"/>
        </properties>
    </rule>
</ruleset>
